<ion-view view-title="">
	<ion-content>
		<div class="container">
			<div class="inner_cont type2">
				<!-- 정보입력 -->
				<ul class="entry_area mypage"> <!-- modify -->
					<li>
						<div class="title_s">이름</div>
						<div class="input_area"><input type="text" value="홍**" disabled /></div>
					</li>
					<li>
						<div class="title_s">아이디</div>
						<div class="input_area"><input type="text" value="gildong" disabled /></div>
					</li>
					<li>
						<div class="title_s">생년월일</div>
						<div class="input_area"><input type="text" value="19880416" disabled /></div>
					</li>
					<li>
						<div class="title_s">
							<div class="tips">
								이메일
								<span class="icon_tip">i</span>
								<div class="detail_tip">
									수신에 동의하지 않으셔도 서비스 이용 관련 중요 메일은 발송됩니다. 
								</div>
							</div>
						</div>
						<div class="email_area on"> <!-- 수신동의 on / 수신거부 off -->
							<div class="input_area"><input type="text" value="gild***@koscom.co.kr " disabled /></div>
							<div class="top_box">
								<div class="input_area"><input type="text" placeholder="이메일" /></div>
								<span class="txt_at">@</span>
								<div class="input_area"><input type="text" placeholder="" /></div>
							</div>
							<div class="select_box">
								<select>
									<option>직접입력</option>
									<option>네이버</option>
									<option>다음</option>
									<option>네이트</option>
									<option>구글</option>
								</select>
							</div>
							<!-- 수신동의 -->
							<div class="receive_check">
								<div class="form_input"><input type="checkbox" id="receive_ck" name="receive_ck"><label for="receive_ck">수신동의 (뉴스/이벤트 등)</label></div>
							</div>
							<!--// 수신동의 -->
						</div>
					</li>
					<li>
						<div class="title_s">휴대폰번호</div>
						<div class="btm_enter disabled"> <!-- disabled 추가시 버튼이 보이지 않아요 -->
							<div class="input_area"><input type="tel" maxlength="12" value="010-90**-**29" disabled /></div>
							<button type="button" class="btn_send">인증코드 전송</button>
						</div>
						<div class="txt_error">숫자만 입력해주세요</div> <!-- add class : hide_set : display:none; 처리  -->
					</li>
					<li>
						<div class="title_s">
							<div class="tips">
								스마트 OTP
								<span class="icon_tip">i</span>
								<div class="detail_tip">
									&lt;등록 방법&gt;<br><br>
									1. Smartkey Pass앱에 보이는 '사이트 인증 등록' 번호를 입력하시고 ‘확인’ 버튼을 클릭해주세요.<br><br>
									2. Smartkey Pass앱에 하단에 'OK' 버튼을 누르면 등록 됩니다.<br><br>
									<span class="ft_org">*스마트 OTP를 사용하기 위해서는 스마트폰에 Smartkey Pass앱이 설치되어 있어야 합니다.</span><br><br>
								</div>
							</div>
						</div>
						<div class="smart_otp_wrap off"> <!-- OTP 사용 :  on / OTP X : off -->
							<label class="toggle">
								<input type="checkbox">
								<div class="track">
									<div class="handle"></div>
								</div>
							</label>
							<div class="btm_enter smt_otp">
								<div class="input_area"><input type="text" placeholder="스마트 OTP 번호 입력" /></div>
								<button type="button" class="btn_send">확인</button>
							</div>
						</div>
					</li>
				</ul>
				<div class="mem_leave">
					<a href="none" class="btn_text">회원탈퇴</a>
				</div>
			</div>
		</div>
	</ion-content>
	<ion-footer-bar>
		<!-- 하단 버튼 -->
		<div class="button_area btn_bottom_area">
			<button type=""button" class="btn_middle btn_black_org">수정</button>
		</div>
		<!--// 하단 버튼 -->
	</ion-footer-bar>
</ion-view>
